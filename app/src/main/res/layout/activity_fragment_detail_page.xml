                    android:layout_margin="16dp"
                    android:src="@drawable/icon_time" />

                <TextView
                    android:id="@+id/cafeTime"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="22dp"
                    android:gravity="left"
